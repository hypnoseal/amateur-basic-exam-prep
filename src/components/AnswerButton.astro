---
interface Props {
  text: string;
  isCorrect: boolean;
  index: number;
  explanation?: string;
}

const { text, isCorrect, index, explanation = "" } = Astro.props;
const letters = ['A', 'B', 'C', 'D'];
---

<div class="answer-container mb-3">
  <button 
    class="answer-button w-full text-left p-4 border rounded-md bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-indigo-500 transition-colors"
    data-correct={isCorrect}
    data-explanation={explanation}
  >
    <div class="flex items-start">
      <span class="inline-flex items-center justify-center h-6 w-6 rounded-full bg-gray-200 text-gray-700 mr-3 flex-shrink-0">
        {letters[index]}
      </span>
      <span>{text}</span>
    </div>
  </button>
  
  <div class="explanation mt-2 ml-9 text-sm text-gray-600 hidden">
    {explanation || (isCorrect ? "This is the correct answer." : "This is not the correct answer.")}
  </div>
</div>

<style>
  .answer-button.selected-correct {
    @apply bg-green-100 border-green-500;
  }
  
  .answer-button.selected-incorrect {
    @apply bg-red-100 border-red-500;
  }
  
  .answer-button.correct-answer {
    @apply bg-green-50 border-green-300;
  }
</style>